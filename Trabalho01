#include <stdio.h>

// Estrutura para armazenar os dados de uma carta
typedef struct {
    char nome[50];
    unsigned long int populacao;
    float area;
    float pib;
    int pontos_turisticos;
    float densidade;
    float pib_per_capita;
} Carta;

// Função para calcular atributos derivados
void calcular_atributos(Carta *carta) {
    carta->densidade = carta->populacao / carta->area;
    carta->pib_per_capita = carta->pib / carta->populacao;
}

// Função para exibir o menu de seleção de atributos
void exibir_menu(int excluido) {
    printf("\nEscolha um atributo:\n");
    if (excluido != 1) printf("1. População\n");
    if (excluido != 2) printf("2. Área\n");
    if (excluido != 3) printf("3. PIB\n");
    if (excluido != 4) printf("4. Pontos Turísticos\n");
    if (excluido != 5) printf("5. Densidade Demográfica\n");
    if (excluido != 6) printf("6. PIB per Capita\n");
}

// Função para obter o valor de um atributo da carta
float obter_atributo(Carta carta, int escolha) {
    switch (escolha) {
        case 1: return (float)carta.populacao;
        case 2: return carta.area;
        case 3: return carta.pib;
        case 4: return (float)carta.pontos_turisticos;
        case 5: return carta.densidade;
        case 6: return carta.pib_per_capita;
        default: return -1;
    }
}

// Função para obter o nome do atributo
const char* nome_atributo(int escolha) {
    switch (escolha) {
        case 1: return "População";
        case 2: return "Área";
        case 3: return "PIB";
        case 4: return "Pontos Turísticos";
        case 5: return "Densidade Demográfica";
        case 6: return "PIB per Capita";
        default: return "Desconhecido";
    }
}

int main() {
    Carta c1 = {"Brasil", 213000000, 8515767, 2200000, 50, 0, 0};
    Carta c2 = {"Estados Unidos", 331000000, 9833517, 22675000, 75, 0, 0};

    calcular_atributos(&c1);
    calcular_atributos(&c2);

    int atributo1, atributo2;

    // Escolha do primeiro atributo
    do {
        exibir_menu(0);
        printf("Escolha o primeiro atributo (1 a 6): ");
        scanf("%d", &atributo1);
        if (atributo1 < 1 || atributo1 > 6)
            printf("Opção inválida!\n");
    } while (atributo1 < 1 || atributo1 > 6);

    // Escolha do segundo atributo, diferente do primeiro
    do {
        exibir_menu(atributo1);
        printf("Escolha o segundo atributo (diferente do primeiro): ");
        scanf("%d", &atributo2);
        if (atributo2 < 1 || atributo2 > 6 || atributo2 == atributo1)
            printf("Opção inválida!\n");
    } while (atributo2 < 1 || atributo2 > 6 || atributo2 == atributo1);

    // Obter valores dos atributos
    float v1_attr1 = obter_atributo(c1, atributo1);
    float v2_attr1 = obter_atributo(c2, atributo1);
    float v1_attr2 = obter_atributo(c1, atributo2);
    float v2_attr2 = obter_atributo(c2, atributo2);

    // Comparações
    int resultado1, resultado2;

    resultado1 = (atributo1 == 5) ? (v1_attr1 < v2_attr1 ? 1 : 0) : (v1_attr1 > v2_attr1 ? 1 : 0);
    resultado2 = (atributo2 == 5) ? (v1_attr2 < v2_attr2 ? 1 : 0) : (v1_attr2 > v2_attr2 ? 1 : 0);

    float soma1 = v1_attr1 + v1_attr2;
    float soma2 = v2_attr1 + v2_attr2;

    // Exibição dos resultados
    printf("\n=== Comparação de Cartas ===\n");
    printf("Carta 1: %s\n", c1.nome);
    printf("Carta 2: %s\n\n", c2.nome);

    printf("%s:\n", nome_atributo(atributo1));
    printf("  %s: %.2f\n", c1.nome, v1_attr1);
    printf("  %s: %.2f\n", c2.nome, v2_attr1);
    printf("  Resultado: %s venceu!\n\n", resultado1 ? c1.nome : c2.nome);

    printf("%s:\n", nome_atributo(atributo2));
    printf("  %s: %.2f\n", c1.nome, v1_attr2);
    printf("  %s: %.2f\n", c2.nome, v2_attr2);
    printf("  Resultado: %s venceu!\n\n", resultado2 ? c1.nome : c2.nome);

    printf("Soma dos atributos:\n");
    printf("  %s: %.2f\n", c1.nome, soma1);
    printf("  %s: %.2f\n", c2.nome, soma2);

    if (soma1 > soma2)
        printf("Resultado final: %s venceu a rodada!\n", c1.nome);
    else if (soma2 > soma1)
        printf("Resultado final: %s venceu a rodada!\n", c2.nome);
    else
        printf("Resultado final: Empate!\n");

    return 0;
}
